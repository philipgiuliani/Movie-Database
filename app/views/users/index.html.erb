<h2>Benutzer</h2>
<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Vorname</th>
			<th>Nachname</th>
			<th>Aktionen</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.id %></td>
			<td><%= user.firstname %></td>
			<td><%= user.lastname %></td>
			<td>
				<%= link_to "Profil", user_path(user) %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<br /><br />
<% if @current_user.is_admin? %>
	<h2>Nicht aktivierte Benutzer</h2>
	<table>
		<thead>
			<tr>
				<th>ID</th>
				<th>Vorname</th>
				<th>Nachname</th>
				<th>Aktionen</th>
			</tr>
		</thead>
		<tbody>
			<% @users_not_active.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.firstname %></td>
				<td><%= user.lastname %></td>
				<td>
					<%= link_to "Aktivieren", user_path(user), method: :activate %>
					<%= link_to "LÃ¶schen", user_path(user), method: :delete %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
<% end %>