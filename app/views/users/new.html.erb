<h2>Neuen Benutzer angelegen</h2>
<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
	<% end %>

	<p>
		<%= f.label :username %>
		<%= f.text_field :username %>
	</p>
	<p>
		<%= f.label :firstname %>
		<%= f.text_field :firstname %>
	</p>
	<p>
		<%= f.label :lastname %>
		<%= f.text_field :lastname %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</p>
	<p><%= f.submit "Registrieren", class: "button" %></p>
<% end %>