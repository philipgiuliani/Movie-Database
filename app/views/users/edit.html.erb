<h2>Profil bearbeiten</h2>
<%= form_for @user, html: { multipart: true, autocomplete: "off" } do |f| %>
	<%= render partial: "shared/error_messages", locals: { errors: @user.errors.full_messages } %>	
	<p>
		<%= f.label :firstname %>
		<%= f.text_field :firstname %>
	</p>
	<p>
		<%= f.label :lastname %>
		<%= f.text_field :lastname %>
	</p>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :avatar %>
		<%= f.file_field :avatar %>
	</p>
	<p>
		<%= f.label :highlights_view %>
		<%= f.select :highlights_view, [["Empfohlene Filme", "recommended"], ["Neue Filme", "new"]] %>
	</p>
	<p>
		<%= f.label :newsletter %>
		<%= f.check_box :newsletter %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</p>
	<p><%= f.submit "Bearbeiten", class: "button" %></p>
<% end %>