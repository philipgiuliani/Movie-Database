<h2>Profil bearbeiten</h2>
<%= form_for @user do |f| %>
	<p>
		<%= f.label :firstname %>
		<%= f.text_field :firstname %>
	</p>
	<p>
		<%= f.label :lastname %>
		<%= f.text_field :lastname %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</p>
	<p><%= f.submit %></p>
<% end %>