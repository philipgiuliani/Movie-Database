<div class="activity">
	<% if activity.class == SeenMovie %>
		<div class="activity_user"><%= image_tag activity.user.avatar(:small) %></div>
		<div class="activity_description">
			<b><%= link_to activity.user.full_name, user_path(activity.user), class: "link_user" %></b> hat,<br />
			<%= link_to activity.movie.title, movie_path(activity.movie), class: "link_movie" %>
			<%= " vor #{time_ago_in_words(activity.created_at)} als gesehen markiert" %>
		</div>
	<% elsif activity.class == Rating %>
		<div class="activity_user"><%= image_tag activity.user.avatar(:small) %></div>
		<div class="activity_description">
			<b><%= link_to activity.user.full_name, user_path(activity.user), class: "link_user" %></b> hat,<br />
			<%= link_to activity.movie.title, movie_path(activity.movie), class: "link_movie" %>
			<%= " vor #{time_ago_in_words(activity.created_at)} Bewertet. Film: #{activity.rating_general}, Qualität: #{activity.rating_quality}" %><br />
			<span>&bdquo;<%= activity.comment %>&rdquo;</span>
		</div>
	<% elsif activity.class == Status %>
		<div class="activity_user"><%= image_tag activity.user.avatar(:small) %></div>
		<div class="activity_description">
			<b><%= link_to activity.user.full_name, user_path(activity.user), class: "link_user" %></b> hat vor <%= time_ago_in_words(activity.created_at) %> einen Status geschrieben:<br />
			<span>&bdquo;<%= activity.comment %>&rdquo;</span>
		</div>
	<% elsif activity.class == Wish %>
		<div class="activity_user"><%= image_tag activity.created_by_id.avatar(:small) %></div>
		<div class="activity_description">
			<b><%= link_to activity.created_by_id.full_name, user_path(activity.created_by_id), class: "link_user" %></b> hat,<br />
			<%= "sich den Film &bdquo;#{activity.movie_title}&rdquo; vor #{time_ago_in_words(activity.created_at)} gewünscht".html_safe %><br />
		</div>
	<% end %>
	<div class="clear"></div>
</div>