<h2>Filme</h2>
<%= form_tag movies_path, method: "get" do %>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%= submit_tag :search, name: nil %>
	</p>
<% end %>

<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Titel</th>
			<th>Erscheinungsdatum</th>
			<th>Qualität</th>
			<th>3D</th>
			<th>Informationen</th>
			<th>Hinzugefügt von</th>
			<th>Aktualisiert von</th>
			<th>Gesehen</th>
			<th>Aktionen</th>
		</tr>
	</thead>
	<tbody>
		<% @movies.each do |movie| %>
		<tr>
			<td><%= movie.id %></td>
			<td><%= link_to movie.title, movie_path(movie) %></td>
			<td><%= movie.release_year %></td>
			<td><%= Quality.find(movie.quality_id).name %></td>
			<td><%= movie.three_dimensional %></td>
			<td><%= movie.information %></td>
			<td><%= movie.created_by_id.full_name %></td>
			<td><%= movie.updated_by_id.full_name %></td>
			<td><%= @current_user.has_seen?(movie) %></td>
			<td>
				<%= link_to 'Bearbeiten', edit_movie_path(movie) %>
				<%= link_to 'Löschen', movie_path(movie), method: :delete %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= will_paginate @movies %>

<%= link_to 'Film hinzufügen', new_movie_path %>