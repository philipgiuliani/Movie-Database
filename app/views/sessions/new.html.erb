<h2>Anmelden</h2>

<%= form_tag sessions_path do %>
	<p>
		<%= label_tag :username, t("text.session.username") %>
		<%= text_field_tag :username %>
	</p>
	<p>
		<%= label_tag :password, t("text.session.password") %>
		<%= password_field_tag :password %>
	</p>
	<p>
		<%= label_tag :remember_me, t("text.session.remember_me") %>
		<%= check_box_tag :remember_me, 1, params[:remember_me] %>
	</p>
	<p><%= submit_tag t("links.new_session"), class: "button small" %> <%= link_to t("links.new_user"), new_user_path, class: "button small" %></p>
<% end %>