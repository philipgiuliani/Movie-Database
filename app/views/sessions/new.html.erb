<h2>Log in</h2>

<%= form_tag sessions_path do %>
	<p>
		<%= label_tag :username %>
		<%= text_field_tag :username %>
	</p>
	<p>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</p>
	<p>
		<%= label_tag :remember_me %>
		<%= check_box_tag :remember_me, 1, params[:remember_me] %>
	</p>
	<p><%= submit_tag "Anmelden", class: "button small" %> <%= link_to "Registriren", new_user_path, class: "button small" %></p>
<% end %>